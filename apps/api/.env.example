# API Environment Variables
NODE_ENV=development
PORT=5000

# Database
DATABASE_URL="postgresql://postgres:654321@localhost:5432/paperless_exam?schema=public"

# JWT Secrets (Change in production)
JWT_ACCESS_SECRET=your-super-secret-access-token-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-change-in-production

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_ENABLED=true

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Email (for future)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@paperless-exam.com

# AWS (for future AI services)
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here-change-in-prod
